<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="385dp"
        android:layout_height="180dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:outlineSpotShadowColor="@android:color/holo_purple"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout


            android:id="@+id/constraintLayout"
            android:layout_width="391dp"
            android:layout_height="100dp"


            android:orientation="vertical">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="111dp"
                android:layout_marginTop="20dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/resImg"
                app:layout_constraintTop_toTopOf="parent" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="238dp"
                android:layout_height="52dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="104dp"
                android:numStars="5"
                android:progressBackgroundTint="@android:color/darker_gray"
                android:progressTint="@android:color/holo_orange_dark"
                android:rating="4"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:stepSize="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name" />


            <TextView
                android:id="@+id/rateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="18dp"
                android:text="0.0"
                android:textColor="#7659C1"
                app:layout_constraintStart_toEndOf="@+id/resImg"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/resImg"
                android:layout_width="109dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="135dp"
                android:elevation="3000dp"
                android:src="@drawable/pizza1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button2"
                android:layout_width="159dp"
                android:layout_height="136dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/cardbutt"
                android:backgroundTint="#F0D5F4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/resImg" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="369dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button9"
                android:layout_width="55dp"
                android:layout_height="34dp"
                android:layout_marginEnd="76dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/cardbutwhite"
                android:backgroundTint="@color/white"
                android:text="       >>>"
                android:textColor="#D9CDF9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/details_btn"
                android:layout_width="175dp"
                android:layout_height="39dp"
                android:layout_marginStart="78dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/cardbut2"
                android:text="GO TO THE DETAILS"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        -->
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
















